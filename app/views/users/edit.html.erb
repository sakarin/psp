<script type="text/javascript">

    Cufon.replace('.menu-head-content', {hover:true});
    Cufon.replace('.menu-head-content-status-label', {hover:true});
    Cufon.replace('.tabel-data-thead', {hover:true});
    Cufon.replace('.button-box', {hover:true});
    Cufon.replace('.negative', {hover:true});

//    Cufon.replace('label', {hover:true});
//    Cufon.replace('.role', {hover:true});

</script>

<div class="menu-head-content">
  <ul>
    <li><a href="<%= users_path %>"><strong>รายการผู้ใช้งาน</strong></a></li>
    <li>|</li>
    <li><a href="#"><b>แก้ไขผู้ใช้</b></a></li>
  </ul>
</div>
<div class="menu-head-content-label">EDIT USER</div>

<%= form_for(@user) do |f| %>


    <div class="form">
      <ul>
        <li>
          <p>
            <label class="label-form" for="form"><span><b>ชื่อผู้ใช้ :</b></span>
              <%= f.text_field :username %>
            </label>
          </p>
        </li>
        <li>
          <p>
            <label class="label-form" for="form"><span><b>ชื่อ-นามสกุล :</b></span>
              <%= f.text_field :name %>
            </label>
          </p>
        </li>
        <li>
          <p>
            <label class="label-form" for="form"><span><b>อีเมล์ :</b></span>
              <%= f.email_field :email %>
            </label>
          </p>
        </li>
        <li>

        <% if can? :create, User %>
            <%= render "shared/cancan" %>
        <% end %>


          <div style="height:25px;padding-top:10px;">
                <span class="buttons">
                    <a href="#" class="negative" style="margin-left: 115px;" onclick="document.forms[0].submit();">
                      <%= image_tag "icons/accept.png" %>
                      <b>ตกลง</b>
                    </a>
                </span>
                <span class="buttons">
                    <a href="<%= users_path %>" class="negative" style="margin-left: 5px;">

                      <%= image_tag "icons/cross.png" %>
                      <b>ย้อนกลับ</b>
                    </a>
                </span>
          </div>
        </li>
      </ul>
    </div>

<% end %>
